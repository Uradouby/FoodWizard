<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clipToOutline="true"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/food"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foods" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food_name"
        android:padding="20dp"
        style="@style/wizard_text"
        app:layout_constraintTop_toBottomOf="@id/food"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/nuitrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is nuitrition This is nuitrition This is nuitrition This is nuitrition This is nuitrition This is nuitrition This is nuitrition This is nuitrition This is nuitrition This is nuitrition This is nuitrition This is nuitrition "
        android:padding="20dp"
        style="@style/wizard_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />

</androidx.constraintlayout.widget.ConstraintLayout>